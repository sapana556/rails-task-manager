<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.label :mark_as_completed %>
  <%= f.check_box :completed, {}, true, false %>
  <%= f.submit %>
<% end %>

<%= link_to "Back to homepage", tasks_path %>
